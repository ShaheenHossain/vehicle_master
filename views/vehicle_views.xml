<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- TREE VIEW -->
    <record id="view_vehicle_tree" model="ir.ui.view">
        <field name="name">vehicle.master.tree</field>
        <field name="model">vehicle.master</field>
        <field name="arch" type="xml">
            <tree>
                <field name="partner_id"/>
                <field name="brand_id"/>
                <field name="model_id"/>
                <field name="year"/>
                <field name="license_plate"/>
                <field name="mileage"/>
            </tree>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_vehicle_form" model="ir.ui.view">
        <field name="name">vehicle.master.form</field>
        <field name="model">vehicle.master</field>
        <field name="arch" type="xml">
            <form string="Vehicle">
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="brand_id"/>
                            <field name="model_id"/>
                            <field name="year"/>
                            <field name="variant"/>
                            <field name="license_plate"/>
                            <field name="vin"/>
                            <field name="color"/>
                            <field name="fuel_type"/>
                        </group>
                        <group>
                            <field name="first_registration"/>
                            <field name="mileage"/>
                            <field name="type_code"/>
                            <field name="master_number"/>
                            <field name="last_service_date"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_vehicle" model="ir.actions.act_window">
        <field name="name">Vehicles</field>
        <field name="res_model">vehicle.master</field>
        <field name="view_mode">tree,form</field>
    </record>



    <!-- Brand Views -->

    <record id="view_vehicle_brand_tree" model="ir.ui.view">
        <field name="name">vehicle.brand.tree</field>
        <field name="model">vehicle.brand</field>
        <field name="arch" type="xml">
            <tree>
                <field name="logo" widget="image" options="{'size': [50, 50]}"/>
                <field name="name"/>
            </tree>
        </field>
    </record>


    <record id="view_vehicle_brand_form" model="ir.ui.view">
        <field name="name">vehicle.brand.form</field>
        <field name="model">vehicle.brand</field>
        <field name="arch" type="xml">
            <form>
                <sheet>

                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>

                    <field name="logo" widget="image"
                           class="oe_avatar"
                           options="{'preview_image': 'logo'}"/>


                    <notebook>
                        <page string="Models">
                            <field name="model_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>




    <record id="vehicle_brand_view_kanban" model="ir.ui.view">
        <field name="name">vehicle.brand.kanban</field>
        <field name="model">vehicle.brand</field>
        <field name="arch" type="xml">
            <kanban default_order="name">
                <field name="name"/>
                <field name="logo"/>
                <field name="model_count"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_vignette oe_semantic_html_override oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <field name="logo" widget="image" class="o_image_64_max" height="52"/>
                            </div>

                            <div class="oe_kanban_details">
                                <strong>
                                    <field name="name"/>
                                </strong>

                                <div>
                                    <t t-esc="record.model_count.value"/> Models
                                </div>
                            </div>

                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>





    <record id="action_vehicle_brand" model="ir.actions.act_window">
        <field name="name">Vehicle Brands</field>
        <field name="res_model">vehicle.brand</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>


    <!-- MENU -->
    <menuitem id="menu_vehicle_root" name="Vehicle Master" web_icon="vehicle_master,static/description/icon.png"/>
    <menuitem id="menu_vehicle" name="Vehicles" parent="menu_vehicle_root" action="action_vehicle"/>

    <menuitem id="menu_vehicle_brand" name="Brands" parent="menu_vehicle_root" action="action_vehicle_brand"/>


</odoo>
